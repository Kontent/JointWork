	<administration>
		<menu view="default" img="media/jointwork/favicons/jointwork.png">COM_JOINTWORK_MENU</menu>
		<!-- <submenu>
			<menu view="config" img="media/jointwork/favicons/config.png">COM_JOINTWORK_CONFIGURATION</menu>
		</submenu> -->
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>api.php</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>htaccess.txt</filename>
			<filename>index.html</filename>
			<filename>jointwork.php</filename>
			<folder>controllers</folder>
			<folder>install</folder>
			<folder>libraries</folder>
			<folder>models</folder>
			<folder>views</folder>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_jointwork.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_jointwork.sys.ini</language>
		</languages>
	</administration>
	<updateservers>
		<server type="collection" priority="1" name="JointWork Update Site">http://extensions.kontentdesign.org/updates/jointwork</server>
	</updateservers>
