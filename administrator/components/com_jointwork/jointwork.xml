	<license>GNU/GPL License</license>
	<description>COM_JOINTWORK_DESCRIPTION</description>
	<scriptfile>install/install.script.php</scriptfile>
	<files folder="site">
		<filename>CHANGELOG.php</filename>
		<filename>controller.php</filename>
		<filename>COPYRIGHT.php</filename>
		<filename>htaccess.txt</filename>
		<filename>index.html</filename>
		<filename>jointwork.php</filename>
		<filename>router.php</filename>
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	<languages folder="site">
		<language tag="en-GB">language/en-GB/en-GB.com_jointwork.ini</language>
	</languages>
	<media folder="media" destination="jointwork">
		<filename>index.html</filename>
